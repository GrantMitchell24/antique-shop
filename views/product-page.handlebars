<section>
    <div class="card text-center mb-5 product-card">
        <div class="card-header">
            <img src="{{url_link}}" class="card-img-top" alt="...">
        </div>
        <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <p class="card-text">{{description}}</p>
            <p>$ {{price}}</p>
            <a href="/" class="btn btn-secondary">Back</a>
            {{#if logged_in}}
            <a href="/" class="btn btn-primary add-to-cart" data-id="{{id}}">Add to Cart</a>
            {{/if}}
    </div>
</section>

<script src="/js/product-to-cart.js"></script>
