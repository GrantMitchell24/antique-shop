<div class="card mb-3 row" style="max-width: 30rem;">

  <h2>Login</h2>

  <form class="form login-form">
    <div class="form-group">
      <label for="email-login">email:</label>
      <input class="form-input" type="text" id="email-login" />
    </div>
    <div class="form-group">
      <label for="password-login">password:</label>
      <input class="form-input" type="password" id="password-login" />
    </div>
    <div class="form-group">
      <button class="btn btn-primary" type="submit">login</button>
    </div>
  </form>
</div>

<div class="card mb-3 row" style="max-width: 30rem;">
  <h2>Sign-Up</h2>

  <form class="form signup-form">
    <div class="form-group">
      <label for="signup-name">name:</label>
      <input class="form-input" type="text" id="signup-name" />
    </div>
    <div class="form-group">
      <label for="signup-email">email: </label>
      <input class="form-input" type="text" id="signup-email" />
    </div>
    <div class="form-group">
      <label for="signup-password">password :</label>
      <input class="form-input" type="password" id="signup-password" />
    </div>
    <div class="form-group">
      <button class="btn btn-primary" type="submit">Sign-Up</button>
    </div>
  </form>
</div>

<script src="/js/login.js"></script>